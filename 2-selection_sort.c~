#include "sort.h"

void swap(int *a, int *b)
{
    int temp = *a;
    *a = *b;
    *b = temp;
}

void selection_sort(int *array, size_t size)
{
    int *min;
    size_t i = 0, j;
    if (array == NULL || size < 2)
        return;
    while (i < size - 1)
    {
        min = array + i;
        j = i + 1;
        while (j < size)
        {
            if (array[j] < *min)
                min = array + j;
            j++;
        }
        if ((array + i) != min)
        {
            swap(array + i, min);
            print_array(array, size);
        }

        i++;
    }
}